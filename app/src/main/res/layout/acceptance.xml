<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backall">

       <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:background="@color/colorPrimary"
           android:orientation="horizontal">
           <Space
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1" />

           <TextView
               android:id="@+id/acceptance_toolbar_car_number"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text="车辆验收"
               android:textColor="@color/white"
               android:textSize="20sp" />

           <Space
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1" />
       </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:text="采样编码:"
            android:textSize="16sp"
            android:textColor="@android:drawable/screen_background_dark"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/acceptance_car_sampling_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@android:drawable/screen_background_dark"
            android:gravity="center|left"
            android:text="201709211610"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="right|center_vertical"
                android:text="扣吨："
                android:textColor="@android:drawable/screen_background_dark"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/acceptance_car_choice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:textSize="16sp"
                android:text="0.0"
                android:textColor="@android:drawable/screen_background_dark"
                android:gravity="center|left"/>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.15"
        android:text="采样方式:"
        android:textSize="16sp"
        android:textColor="@android:drawable/screen_background_dark"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/checkBox1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:text="人工采样"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@android:drawable/screen_background_dark" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="单采"
        android:textSize="16sp"
        android:textColor="@android:drawable/screen_background_dark" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="预测热值:"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:drawable/screen_background_dark" />

            <TextView
                android:id="@+id/acceptance_coal_caloricpower"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1.05"
                android:gravity="center|left"
                android:textSize="15sp"
                android:textColor="@android:drawable/screen_background_dark"
                android:text="0.0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="预测硫分:"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@android:drawable/screen_background_dark" />

            <TextView
                android:id="@+id/acceptance_coal_sulphur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1.05"
                android:gravity="center|left"
                android:textSize="15sp"
                android:textColor="@android:drawable/screen_background_dark"
                android:text="0.0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="目测热值:"
                android:textSize="15sp"
                android:textColor="@android:drawable/screen_background_dark" />

            <EditText
                android:id="@+id/acceptance_visual_calorific_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boder"
                android:digits="0123456789.1234567890"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:hint="0.0"
                android:textSize="15sp"
                android:textColor="@android:drawable/screen_background_dark" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="分配区域:"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@android:drawable/screen_background_dark"
                />
            <TextView
                android:id="@+id/coalYardAear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:textColor="@android:drawable/screen_background_dark"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center|left"
                android:text="煤场"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="实际区域:"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@android:drawable/screen_background_dark"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <Spinner
                    android:id="@+id/acceptance_car_realityAear"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:textColor="@android:drawable/screen_background_dark"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:text="备注:"
                android:textSize="18dp"
                android:textColor="@android:drawable/screen_background_dark"/>
            <EditText
                android:id="@+id/choice_project_all_remark"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_weight="0.7"
                android:layout_height="32dp"
                android:background="@drawable/boder"
                android:textSize="18dp"
                android:textColor="@android:drawable/screen_background_dark"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <Spinner
                    android:id="@+id/acceptance_option"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:textColor="@android:drawable/screen_background_dark"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
            <Button
                android:id="@+id/acceptance_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="验收"
                android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
            <Button
                android:id="@+id/acceptance_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退车"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/image_button"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_choice_project"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/backall"
                android:text="扣吨"
                android:textSize="16sp"
                />
            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="照片1"
                android:textSize="16sp"
                android:background="@drawable/boder"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="照片2"
                android:textSize="16sp"
                android:background="@drawable/boder"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boder"
                android:text="照片3"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="照片4"
                android:textSize="16sp"
                android:background="@drawable/boder"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/message"
            >
            <include android:id="@+id/choice_project_include"
                layout="@layout/choice_project_itme_listview"></include>

            <ImageView
                android:id="@+id/imageview1"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/imageview2"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/imageview3"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/imageview4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>

</GridLayout>